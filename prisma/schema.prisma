generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workspace {
  id            String            @id @default(cuid())
  slackTeamId   String            @unique
  accessToken   String
  botToken      String
  summaries     Summary[]
  preferences   UserPreferences[]
  analytics     Analytics[]
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}

model Summary {
  id            String    @id @default(cuid())
  threadTs      String
  channelId     String
  content       String    @db.Text
  messageCount  Int
  participants  String[]
  topicType     String?
  channelName   String?
  requestedBy   String
  workspace     Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId   String
  feedback      Feedback[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([threadTs, channelId])
}

model Feedback {
  id        String   @id @default(cuid())
  summaryId String
  summary   Summary  @relation(fields: [summaryId], references: [id])
  userId    String
  reaction  String
  createdAt DateTime @default(now())
}

model UserPreferences {
  id          String    @id @default(cuid())
  userId      String    @unique
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  responseMode String   @default("message")
  language    String    @default("en")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Analytics {
  id          String    @id @default(cuid())
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  eventType   String
  userId      String
  channelId   String
  metadata    Json?
  createdAt   DateTime  @default(now())
}
